#!/usr/bin/env bash

fresh freshshell/fresh bin/fresh --bin

fresh config/my.cnf --file
fresh config/rofi.rasi --file="$HOME"/.config/rofi/config.rasi
fresh config/topgrade.toml --file="$HOME"/.config/topgrade.toml
fresh config/xinitrc --file="$HOME"/.config/X11/xinitrc
fresh config/flameshot.ini --file="$HOME"/.config/flameshot/flameshot.ini

AWS_FILE=config/aws.asc
if test -f "$AWS_FILE"; then
  fresh "$AWS_FILE" --file="$HOME"/.config/aws/config --filter="gpg --quiet --batch --no-tty --decrypt"
fi
